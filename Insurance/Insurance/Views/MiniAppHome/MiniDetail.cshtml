
@{
    ViewData["Title"] = "详细";
    Layout = "_LayoutMini";
}
@model Insurance.Models.DetailModel
<table class="table minitable table-striped table-bordered">
    @{
        UserInfoModel currUser = ViewBag.CurrentUser;
        string openid = ViewBag.OpenId;
        if (Model.MonthlyExcel != null && Model.MonthlyExcel.Count > 0)
        {
            <thead class="thead-dark">
                <tr style="text-align:center">
                    <th style="padding:0px" scope="col">月份</th>
                    <th scope="col">人次</th>
                    <th scope="col">保费</th>
                    <th scope="col" colspan="1">操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.MonthlyExcel)
                    {
                        if (item != null)
                        {
                            DateTime start = DateTime.Parse(item.StartDate);
                            <tr style="text-align: center">
                                <td class="td_middle">@start.ToString("yyyy/M")</td>
                                <td class="td_middle">@item.HeadCount</td>
                                <td class="td_middle">@Math.Round(item.Cost, 2)</td>
                                <td class="td_middle"><a type="button" class="btn btn-primary" href="/MiniAppHome/MiniCompanyHistory?date=@item.StartDate&name=@item.Company&openId=@openid">详</a></td>
                            </tr>
                        }

                    }
                }
                <tr style="text-align: center">
                    <td>-</td>

                    <td>@Model.MonthlyExcel.Sum(_ => _.HeadCount)</td>
                    <td>@Math.Round(@Model.MonthlyExcel.Sum(_ => _.Cost), 2)</td>
                    <td>-</td>
                </tr>
            </tbody>
        }
        else if (Model.Excels != null && Model.Excels.Count > 0)
        {
            <thead class="thead-dark">
                <tr>
                    @*<th scope="col">序号</th>*@
                    <th scope="col" class="">操作</th>
                    @*<th scope="col">始</th>
                        <th scope="col">终</th>*@
                    <th scope="col">人数</th>
                    @*<th scope="col">类型</th>*@
                    <th scope="col">保费</th>
                    <th scope="col">账号</th>
                    <th scope="col">保额</th>
                    <th scope="col" colspan="2">操作</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Excels)
                {

                    string up, start, end;
                    up = start = end = string.Empty;
                    if (DateTime.TryParse(item.UploadDate, out DateTime uploadDate)) { up = uploadDate.ToString("yyyy-M-d"); }
                    if (DateTime.TryParse(item.StartDate, out DateTime startDate)) { start = startDate.ToString("yyyy-M-d"); }
                    if (DateTime.TryParse(item.EndDate, out DateTime endDate)) { end = endDate.ToString("yyyy-M-d"); }

                    string plan = @item.Plan.Replace("万", "");
                    string month = string.IsNullOrWhiteSpace(item.StartDate) ? item.EndDate : item.StartDate;
                    <tr>
                        @*<td class="td_middle">@(Model.Excels.IndexOf(item) + 1)</td>*@
                        <td class="td_middle">@up</td>
                        @*<td class="td_middle">@start</td>
                            <td class="td_middle">@end</td>*@
                        <td class="td_middle">@item.HeadCount</td>
                        @*<td class="td_middle">@item.Mode</td>*@
                        <td class="td_middle">@Math.Round(item.Cost, 2)</td>
                        <td class="td_middle">@item.Uploader</td>
                        <td class="td_middle">@plan</td>
                        <td class="td_middle">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-company="@item.Company" data-fn="@item.FileName" data-date="@month" data-openid="@openid" data-target="#dataPreview">
                                预
                            </button>

                        </td>
                        @*@if (currUser.AccessLevel == 0)
                        {
                            <td class="td_middle">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-company="@item.Company" data-filename="@item.FileName" data-startdate="@item.StartDate" data-plan="@item.Plan" data-uploaddate="@item.UploadDate" data-target="#confirmDeleteExcel">
                                    删
                                </button>
                            </td>
                        }*@
                    </tr>
                }
            </tbody>

        }
    }
</table>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="dataPreview" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="previewTable" class="table minitable table-striped table-bordered">
                    <thead class="thead-dark">
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                @*<a class="btn btn-primary" id="download" href="">
                    下载
