/**app.wxss**/
@import 'miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
page,view,swiper,swiper-item,navigator,image,button,text{
    margin:0;
    padding:0;
    box-sizing: border-box;
}
  
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

navigator.weui-btn{
  background-color: #07c160;
}

.horizontalview{
  height: 100%;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5rpx 5rpx;
  margin: 5rpx auto;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom-style: solid;
  border-color: rgb(187, 187, 187);
  border-width: 0.5rpx;
}

.verticalview{
  height: 100%;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5rpx 5rpx;
  margin: 5rpx auto;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom-style: solid;
  border-color: rgb(187, 187, 187);
  border-width: 0.5rpx;
}

text{
  padding: 0.5rpx 0.5rpx;
  text-align: center;
}

text.title{
  font-weight: 500;
}

view.verticalCenter{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

input.txt{
  border: 1px;
  border-bottom-style: solid;
  text-align: center;
}


.col-1{
  flex: 1;
}

.col-2{
  flex: 2;
}

.col-3{
  flex: 3;
}

.col-4{
  flex: 4;
}
.col-5{
  flex: 5;
}
.col-6{
  flex: 6;
}
